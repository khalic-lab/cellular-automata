{
  "name": "nd-cellular-automata",
  "version": "1.0.0",
  "description": "Zero-dependency TypeScript library for N-dimensional cellular automata with LLM-friendly JSON interface",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "vitest run && playwright test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "life": "bun run src/cli/life.ts",
    "view3d": "vite",
    "view3d:build": "vite build"
  },
  "keywords": [
    "cellular-automata",
    "n-dimensional",
    "typescript",
    "simulation",
    "game-of-life",
    "zero-dependency"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^2.1.8",
    "serve": "^14.2.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "three": "^0.182.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
